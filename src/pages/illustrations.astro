---

<Layout
    title="Illustrations"
    description="Illustrations - Nick Berens"
    headerVariant="pod"
>
    {illustrations.map((item, index) => (
        item.hasParallax ? (
            <ParallaxSection
                client:visible
                data-section-color={item.dataSectionColor}
                data-section-theme={item.dataSectionTheme}
                {...(item.dataFooterColor && { 'data-footer-color': item.dataFooterColor })}
                backgroundColor={item.backgroundColor}
                backgroundImage={item.backgroundImage.src}
                foregroundImage={item.foregroundImage.src}
                backgroundAlt="Background"
                foregroundAlt={item.imgAlt}
                fullWidth={item.fullWidth}
                noPadding={item.noPadding}
                parallaxSpeed={item.parallaxSpeed || 0.8}
                foregroundMaxWidth={item.foregroundMaxWidth}
                class={item.class}
            />
        ) : (
            <PageSection
                data-section-color={item.dataSectionColor}
                background-color={item.backgroundColor}
                data-section-theme={item.dataSectionTheme}
                {...(item.dataFooterColor && { 'data-footer-color': item.dataFooterColor })}
                full-width={item.fullWidth}
                no-padding={item.noPadding}
                class={item.class}
            >
              <Image
                  src={item.imgSrc}
                  alt={item.imgAlt}
                  style={item.imgStyle}
                  loading={index > 0 ? "lazy" : "eager"}
              />
            </PageSection>
        )
    ))}
</Layout>

<style>
    .page-section,
    .parallax-section {
        margin-bottom: -5px;
    }
</style>