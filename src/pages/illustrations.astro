---
import Layout from '../layouts/Layout.astro';
import PageSection from '../components/PageSection.vue';
import snakeFlying from '../assets/images/snake-flying.png';
import flyingRobot from '../assets/images/flying-robot.png';
import vulture from '../assets/images/vulture.png';
import hideOut from '../assets/images/hide-out.png';
import smalltime from '../assets/images/smalltime.png';
import winger from '../assets/images/winger.png';
import dopeGoose from '../assets/images/dope-goose.jpg';
import carFlower from '../assets/images/cat-flower.png';
import snakeHug from '../assets/images/snake-hug.jpg';
import hazHug from '../assets/images/haz-hug.png';
import dumbDoug from '../assets/images/dumb-doug.jpg';
import poolShark from '../assets/images/pool-shark.jpg';
import dougFightsBack from '../assets/images/doug-fights-back.jpg';
import eatUsForFun from '../assets/images/eat-us-for-fun.jpg';
import dont from '../assets/images/dont.jpg';
import { Image } from 'astro:assets';
---

<Layout title="Illustrations" description="Illustrations - Nick Berens" headerVariant="pod">


	<PageSection
		data-section-color="#cde3ff"
		background-color="#cde3ff"
		data-section-theme="light"
		full-width
		no-padding
		class="pt-16"
	>
		<Image
			src={dumbDoug}
			alt="Kinda Dumb Doug Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#dcb1bb"
		background-color="#dcb1bb"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={flyingRobot}
			alt="Robot Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>

	<PageSection
		data-section-color="#97ddff"
		background-color="#97ddff"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={hazHug}
			alt="Haz Hug Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>




	<PageSection
		data-section-color="#cdcdcd"
		background-color="#cdcdcd"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={hideOut}
			alt="Hideout Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#ccebfe"
		background-color="#ccebfe"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={snakeFlying}
			alt="Snake Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#d4d4d4"
		background-color="#d4d4d4"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={carFlower}
			alt="Friend With Flower Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>

	<PageSection
		data-section-color="#c9d5fe"
		background-color="#c9d5fe"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={dougFightsBack}
			alt="Doug Fights Back Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>

	<PageSection
		data-section-color="#a1a1a1"
		background-color="#a1a1a1"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={poolShark}
			alt="Pool Shark Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#baeeff"
		background-color="#baeeff"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={vulture}
			alt="Vulture Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#e5e5e5"
		background-color="#e5e5e5"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={dopeGoose}
			alt="Dope Goose Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>






	<PageSection
		data-section-color="#a3f6ff"
		background-color="#a3f6ff"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={smalltime}
			alt="Smalltime Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#fff"
		background-color="#fff"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={winger}
			alt="Smalltime Wing Face Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#bfe4fe"
		background-color="#bfe4fe"
		data-section-theme="light"
		full-width
		no-padding
	>
		<Image
			src={eatUsForFun}
			alt="Eat Us For Fun Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#000"
		data-section-theme="dark"
		data-footer-color="#000"
		background-color="#baeeff"
		full-width
		no-padding
	>
		<Image
			src={dont}
			alt="Don't Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>
	<PageSection
		data-section-color="#baeeff"
		data-section-theme="light"
		data-footer-color="#c07c69"
		background-color="#baeeff"
		full-width
		no-padding
		class="pt-16"
	>
		<Image
			src={snakeHug}
			alt="Snake Hug Illustration"
			style="max-width: 100%; height: auto;"
		/>
	</PageSection>





















</Layout>

<style>
	.page-section {
		margin-bottom: -5px;
	}
</style>
